<section id="contact" class="py-20 bg-background">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-neutral-900 mb-4">
        Get in Touch
      </h2>
      <p class="text-neutral-600 max-w-2xl mx-auto">
        Have questions? We're here to help you enhance your learning journey
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="bg-card border border-foreground/10 rounded-xl shadow-md p-8">
        <form id="contactForm" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="firstName" class="block text-sm font-medium text-neutral-700 mb-2">First Name</label>
              <input type="text" id="firstName" name="firstName" class="w-full px-4 py-3 rounded-full border border-neutral-300 focus:ring-2 focus:ring-primary focus:border-primary" required>
            </div>
            <div>
              <label for="lastName" class="block text-sm font-medium text-neutral-700 mb-2">Last Name</label>
              <input type="text" id="lastName" name="lastName" class="w-full px-4 py-3 rounded-full border border-neutral-300 focus:ring-2 focus:ring-primary focus:border-primary" required>
            </div>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-neutral-700 mb-2">Email Address</label>
            <input type="email" id="email" name="email" class="w-full px-4 py-3 rounded-full border border-neutral-300 focus:ring-2 focus:ring-primary focus:border-primary" required>
          </div>

          <%- include('src/templates/components/button.ejs',
            {
                variant: "primary",
                children: "Send Message",
                attributes: {
                    type: "submit",
                    class: "w-full"
                }
            }
          ) %>
        </form>
      </div>

      <!-- Contact Information -->
      <div class="space-y-8">
        <div class="bg-card border border-foreground/10 rounded-xl shadow-md p-8">
          <h3 class="text-xl font-bold text-neutral-900 mb-6">Contact Information</h3>
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="h-12 w-12 bg-primary/10 rounded-lg flex items-center justify-center">
                  <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h4 class="text-lg font-semibold text-neutral-900">Phone</h4>
                <p class="text-neutral-600">+1 (555) 123-4567</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="h-12 w-12 bg-primary/10 rounded-lg flex items-center justify-center">
                  <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h4 class="text-lg font-semibold text-neutral-900">Email</h4>
                <p class="text-neutral-600">support@quantumlabs.edu</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="h-12 w-12 bg-primary/10 rounded-lg flex items-center justify-center">
                  <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h4 class="text-lg font-semibold text-neutral-900">Location</h4>
                <p class="text-neutral-600">123 Learning Street<br>Education City, ED 12345</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
